<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_question_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_question_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:padding="8dp"
        android:textSize="14sp"
        tools:text="#1234" />
    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:padding="4dp"
        android:textSize="14sp"
        tools:text="what is your name ? plz select a option that is appropriate dont u think so" />

        <LinearLayout
            android:id="@+id/ll_option1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/tv_option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="This is option 1"
            />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_option2"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/tv_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="This is option 2"
                />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_option3"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/tv_option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="This is option 3"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_option4"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"/>
        <TextView
            android:id="@+id/tv_option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="This is option 4"
            />
    </LinearLayout>

        <Button
            android:id="@+id/bt_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:background="@drawable/item_round_rectangle"
            android:text="@string/answer" />
    </LinearLayout>

</android.support.v7.widget.CardView>